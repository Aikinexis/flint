{
  "enabled": true,
  "name": "Microcopy and messages pass",
  "description": "Keep user facing text clear and human.",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Inspect user visible strings. Fix grammar and clarity. Keep tone friendly and direct. Avoid jargon. Suggest shorter labels if any exceed 30 characters."
  }
}